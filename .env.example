# Configurações do WordPress
WP_PATH=/caminho/para/wordpress
WP_URL=http://localhost/wordpress
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=sua_senha_segura

# Configurações do Banco de Dados
DB_HOST=mysql
DB_NAME=wp_manager
DB_USER=wp_manager
DB_PASSWORD=sua_senha_segura_aqui

# Configurações de Backup
BACKUP_PATH=/caminho/para/backups
BACKUP_RETENTION_DAYS=30

# Configurações de API
API_URL=http://localhost/wp-manager/api
FRONTEND_URL=http://localhost/wp-manager
API_TOKEN=seu_token_seguro

# Configurações de Segurança
JWT_SECRET=sua_chave_jwt_segura

# Configurações do Redis
REDIS_HOST=redis
REDIS_PASSWORD=sua_senha_redis
REDIS_PORT=6379

# Configurações de Email
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# Configurações de Log
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Configurações de Cache
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Configurações de Monitoramento
MONITOR_DISK_THRESHOLD=90
MONITOR_MEMORY_THRESHOLD=90
MONITOR_CPU_THRESHOLD=80

# Configurações de Notificação
NOTIFICATION_SLACK_WEBHOOK=
NOTIFICATION_EMAIL=
NOTIFICATION_TELEGRAM_BOT_TOKEN=
NOTIFICATION_TELEGRAM_CHAT_ID=

# Configurações de SSL/TLS
SSL_CERTIFICATE=/caminho/para/certificado.crt
SSL_CERTIFICATE_KEY=/caminho/para/chave.key
SSL_CHAIN_CERTIFICATE=/caminho/para/chain.crt

# Configurações de Debug
APP_DEBUG=false
APP_ENV=production
APP_KEY=
APP_NAME="WordPress Manager"
APP_URL=http://localhost

# Configurações de Email
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USER=seu-email@exemplo.com
SMTP_PASS=sua-senha

# Configurações de Segurança
SECURITY_SCAN_FREQUENCY=daily
SECURITY_NOTIFICATION_EMAIL=admin@exemplo.com

# Configurações do WordPress
WP_DEBUG=false
WP_MEMORY_LIMIT=256M 